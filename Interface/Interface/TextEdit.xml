<UIView
    left            ="safeAreaInsets.left"
    right           ="safeAreaInsets.right"
    top             ="safeAreaInsets.top"
    bottom          ="safeAreaInsets.bottom"
    backgroundColor ="{bkgcViewColor}"
    >
    <UIStackView
        outlet          ="stackView"
        axis            ="vertical"
        alignment       ="center"
        distribution    ="fillProportionally"
        width           ="100%"
        spacing         ="10"
    >
        <UILabel
            outlet          ="contextLabel"
            text            ="{context}"
            textAlignment   ="left"
            numberOfLines   ="0"
            backgroundColor ="bkgdLabelColor"
            width           ="100%"
            height          ="50"
        />
        <UITextView
            outlet          ="textView"
            text            ="{initial}"
            backgroundColor ="bkgdTextInputColor"
            width           ="100%"
            height          ="80"
        />
        <UILabel
            outlet          ="rulesLabel"
            text            ="{rules}"
            textAlignment   ="center"
            numberOfLines   ="0"
            backgroundColor ="bkgdLabelColor"
            height          ="50"
            width           ="100%"
        />
        <UIStackView
            axis            ="horizontal"
            alignment       ="fill"
            spacing         ="10"
            distribution    ="fillProportionally"
        >
            <UIButton
                outlet              ="buttonSave"
                title               ="Save"
                layer.cornerRadius  ="5"
                touchUpInside       ="actionSave"
                height              ="50"
                width               ="120"
                backgroundColor     ="bkgrButtonColor"
            />
            <UIButton
                outlet              ="buttonCancel"
                layer.cornerRadius  ="5"
                title               ="Cancel"
                touchUpInside       ="actionCancel"
                height              ="50"
                width               ="120"
                backgroundColor     ="bkgrButtonColor"
            />
        </UIStackView>
    </UIStackView>
</UIView>

