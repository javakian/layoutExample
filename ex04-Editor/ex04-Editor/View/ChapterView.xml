<UIView
    left            ="safeAreaInsets.left"
    right           ="safeAreaInsets.right"
    top             ="safeAreaInsets.top"
    bottom          ="safeAreaInsets.bottom"
>
    <UICollectionView
        outlet                                          ="chapterCollectionView"
        height                                          ="parent.height - toolBarHeight_Int"
        backgroundColor                                 ="bkgcViewColor"
        collectionViewLayout.itemSize.height            ="collectionViewLayout.itemSize.width"
        collectionViewLayout.itemSize.width             ="(100% - 6 * 10) / 2"
        collectionViewLayout.minimumInteritemSpacing    ="10"
        collectionViewLayout.scrollDirection            ="vertical"
        contentInset.left                               ="10"
        contentInset.right                              ="10"
        contentInsetAdjustmentBehavior                  ="never"
    >
        
        <UICollectionViewCell
            clipsToBounds   ="true"
            reuseIdentifier ="chapterImageCell">
            <UIImageView
                contentMode ="scaleAspectFit"
                height      ="100%"
                image       ="{image}"
                width       ="100%"
            />
        </UICollectionViewCell>
        
        <UICollectionViewCell
            clipsToBounds               ="true"
            reuseIdentifier             ="chapterMovieCell">
            <AVPlayerViewController
                player                        ="{avPlayer}"
                view.isUserInteractionEnabled = "false"
                showsPlaybackControls         ="false"
            />
        </UICollectionViewCell>
        
        <UICollectionViewCell
            clipsToBounds       ="true"
            reuseIdentifier     ="chapterTextCell">
            <UILabel
                text            ="{cellText}"
                font            ="Futura body"
                numberOfLines   ="0"
                lineBreakMode   ="byWordWrapping"
                width           ="100%"
                height          ="100%"
            />
        </UICollectionViewCell>
        
    </UICollectionView>
    <EditToolbar
        outlet          ="editToolbar"
        top             ="previous.bottom"
        height          ="toolBarHeight_Int"
        width           ="100%"
        backgroundColor ="white"
    />
</UIView>
